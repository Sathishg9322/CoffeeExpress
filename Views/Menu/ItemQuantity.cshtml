


<div class="row">

    <div class="offset-md-1 col-md-10 ">

    @foreach(var category in Model)
    {
        <div class="col-md-5 col-sm-6 col-lg-5 ">
            <h3>@category.Key</h3>
            <div class="main-card">
                @foreach (var item in category.Value)
                {
                        <div class="card mb-2">
                            <div class="d-flex card-img p-2">
                                <img class="rounded-circle" width="96" height="96" alt="image" src="/images/Cappaccino.png" />
                                <div class="card-body mt-2 p-2">
                                    <h4 class="card-title">@item.Item</h4>
                                    <p class="card-text">Description...</p>
                                </div>
                            </div>
                            <div class="d-flex card-footers ms-auto p-1">
                                <div class="left me-3">
                                    <h4>₹ @item.Price</h4>
                                </div>
                                <div class=" card-button">
                                    @if (item.Quantity == 0)
                                    {

                                        <form class="d-flex" action="@Url.Action("ItemQuantity", "Menu")" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="actionType" value="Increment" />
                                            <button type="submit" class="btn btn-primary">Add Item</button>
                                        </form>

                                        <!-- Add Button -->
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">

                                            <form class="d-flex" action="@Url.Action("ItemQuantity", "Menu")" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="actionType" value="Decrement" />
                                                <button type="submit" class="btn btn-primary">-</button>
                                            </form>
                                            <!-- Quantity Selector -->

                                            <span class="mx-2">@item.Quantity</span>

                                            <form class="d-flex" action="@Url.Action("ItemQuantity", "Menu")" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="actionType" value="Increment" />
                                                <button type="submit" class="btn btn-primary">+</button>
                                            </form>

                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    
                }
            </div>
            </div>
        
    }
    </div>
    </div>



else
{
    <div>
        <h2>You are not Logged in.. Please <a href="@Url.Action("Login","Account")">Login</a></h2>
    </div>
}