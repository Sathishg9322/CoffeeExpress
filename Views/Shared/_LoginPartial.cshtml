
@using Microsoft.AspNetCore.Http
@using System.Security.Claims




<ul class="navbar-nav">
    @{
        var isAuthenticated = User.Identity.IsAuthenticated;
        var username = isAuthenticated ? User.Identity.Name : null;
        var role = isAuthenticated ? User.FindFirst(ClaimTypes.Role)?.Value : null;
    }
    
    @if (isAuthenticated)
    {
        <li class="nav-item mt-1">
            <a class="nav-link text-dark" asp-area="" asp-controller="Menu" asp-action="OrderHistory">Orders</a>
        </li>

        if (role == "Customer")
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Menu" asp-action="Cart"><img class="rounded-circle" height="35" width="35" src="~/images/iconcart.jpg" alt="cart icon" /></a>
            </li>
        }
    }

    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Menu" asp-action="Cart"><img class="rounded-circle" height="35" width="35" src="~/images/iconcart.jpg" alt="cart icon" /></a>
        </li>
        
    }

</ul>


